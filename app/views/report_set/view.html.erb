<h4>Report Set: <%= @report_set.name %></h4>

<div><%= link_to "Download as CSV", :controller => :report_set, :action => :download_as_csv, :id => @report_set.id %></div>
<br/>

<% form_for :report, :url => { :controller => 'report', :action => :create, :report_set_id => @report_set.id} do |f| %>
  <%= f.text_field :original, :size => 80 %>
  <%= submit_tag 'Send new report' %>
<% end %>

<% if @reports.length > 0 %>
<table class="reports">
  <tr>
    <th>Received</th>
    <th>Understood</th>
	<th>Created</th>
    <th></th>
  </tr>
  <% @reports.each do |r| %>
    <tr id="report-<%= r.id %>">
      <td class="original">
        <%= r.original %>
      </td>
      <td class="understood">
        <span><%= r.parsed %></span>
        <%= image_tag 'corrected.png', :size => '16x16', :style => 'position: relative; top:2px', :title => 'This report was corrected' if r.corrected %>
      </td>
      <td>
	    <%= r.created_at %>
	  </td>
      <td>
        <%= js "correct", "correct_report(" + r.id.to_s + ")" %>
        <%= link_to "reset", :controller => 'report', :action => :reset, :id => r.id if r.corrected %>
        <%= link_to "delete", :controller => 'report', :action => :delete, :id => r.id %>
      </td>
    </tr>
  <% end %>
</table>
<br/>
<% end %>

<%= link_to 'Go back', :controller => :home, :action => :home %>