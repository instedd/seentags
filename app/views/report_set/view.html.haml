%h4
  Report Set: #{@report_set.name}

%div
  %b Submit URL:
  = url_for :only_path => false, :controller => 'report_set', :action => 'incoming', :key => @report_set.submit_url_key
%br/

%div= link_to "Download as CSV", :controller => :report_set, :action => :download_as_csv, :id => @report_set.id
%br/

= form_for :report, :url => { :controller => 'report', :action => :create, :report_set_id => @report_set.id} do |f|
  = f.text_field :original, :size => 80
  = submit_tag 'Send new report'

- if @reports.length > 0
  %table.reports
    %tr
      %th Received
      %th Understood
      %th Created
      %th
    - @reports.each do |report|
      %tr.report{:valign => "baseline"}
        %td= report.original
        %td.understood
          - report.parsed.each_with_index do |parse, idx|
            .piece{:style => "line-height:24px"}
              %span.content= parse
              %a{:href => "#", :onclick => "javascript:correct_report(this, #{report.id}, #{idx})"} fix
        %td
          = report.created_at
        %td
          = link_to "reset", :controller => 'report', :action => :reset, :id => report.id if report.corrected
          = link_to "delete", :controller => 'report', :action => :delete, :id => report.id
  %br/

= link_to 'Go back', :controller => :home, :action => :home
